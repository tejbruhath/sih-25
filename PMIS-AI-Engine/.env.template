# PMIS-AI Smart Allocation Engine - Environment Configuration Template
# =====================================================================
# 
# Copy this file to .env and fill in your actual values
# NEVER commit .env to Git - it contains sensitive information
#
# Usage: cp .env.template .env

# Flask Application Settings
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=true
SECRET_KEY=your-super-secret-flask-key-change-this-in-production

# Server Configuration
HOST=0.0.0.0
PORT=8080
MAX_CONTENT_LENGTH=16777216

# AI Model Configuration
AI_MODEL_NAME=all-MiniLM-L6-v2
EMBEDDINGS_CACHE_SIZE=1000
MODEL_DOWNLOAD_TIMEOUT=300

# Database Configuration (if you add database later)
# DATABASE_URL=postgresql://username:password@localhost:5432/pmis_ai
# REDIS_URL=redis://localhost:6379/0

# Blockchain Configuration (for future real blockchain integration)
# BLOCKCHAIN_NETWORK=sepolia
# PRIVATE_KEY=your-ethereum-private-key-never-share-this
# INFURA_PROJECT_ID=your-infura-project-id
# CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890

# API Keys (for external services)
# HUGGINGFACE_API_TOKEN=hf_your_token_here
# OPENAI_API_KEY=sk-your-openai-key-here
# GOOGLE_CLOUD_API_KEY=your-google-cloud-key

# File Upload Configuration
MAX_FILE_SIZE_MB=10
ALLOWED_RESUME_EXTENSIONS=pdf,txt,docx,doc
UPLOAD_FOLDER=data/uploads

# Security Settings
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=3600

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/pmis_ai.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Rate Limiting (for production)
RATE_LIMIT_STORAGE_URL=memory://
RATE_LIMIT_DEFAULT=100 per hour

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-secure-password
ADMIN_EMAIL=admin@pmis-ai.gov.in

# Notification Settings (for future features)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# FROM_EMAIL=noreply@pmis-ai.gov.in

# Analytics & Monitoring
# GOOGLE_ANALYTICS_ID=GA-XXXXXXXX-X
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# Government Integration (for future)
# AADHAAR_API_KEY=your-aadhaar-api-key
# DIGILOCKER_CLIENT_ID=your-digilocker-client-id
# DIGILOCKER_CLIENT_SECRET=your-digilocker-secret

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=backups/

# Performance Settings
WORKER_PROCESSES=4
WORKER_TIMEOUT=120
KEEP_ALIVE=2
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100
